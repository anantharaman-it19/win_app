<Window
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m="Microsoft.UI.Xaml.Controls"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid Background="#2c2f2f">

        <Grid Background="Black" Height="400" Width="400"  VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login Form" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            <StackPanel Margin="50,80,0,0">
                <TextBlock Text="UserName"/>
                <TextBox Margin="0,5,0,0" Width="300" HorizontalAlignment="Left"/>
                <PasswordBox  Margin="0,20,0,0" PlaceholderText="PassWord"/>
                <TextBox Margin="0,5,0,0" Width="300" HorizontalAlignment="Left"/>
                <CheckBox Margin="0,20,0,0" Content="Remember me." />
                <Button  Foreground="#4ca1e1" Margin="-10,-35,40,0" HorizontalAlignment="Right" Content="Forgot Password?" Background="Transparent" BorderThickness="0"></Button>
                <Button Margin="0,40,0,0"  Width="300" HorizontalAlignment="Left">Login</Button>
            </StackPanel>
        </Grid>
        


        <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
            <Button x:Name="myButton" Click="myButton_Click">Click Me</Button>
        </StackPanel>-->
    </Grid>
</Window>
        

